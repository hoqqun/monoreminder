.container
  = simple_form_for(@item) do |f|
    .row
      = f.error_notification
    .row
      .col.l4
        = f.input :name
      .col.l4
        = f.input :price, as: :integer
      .col.l4
        = f.input :purchase_date, as: :string, input_html: {class: "datepicker"}
    .row
      .col.l4
        = f.association :location, collection: Location.where(user_id: current_user.id), value_method: :id, label_method: :name, include_blank: false, include_hidden: false
      .col.l4
        = f.association :category, collection: Category.where(user_id: current_user.id), value_method: :id, label_method: :name, include_blank: false, include_hidden: false
    .row
      .col.l12
        = f.input :image1, as: :image
    .row
      .col.l12
        = f.input :image2, as: :image
    .row
      .col.l12
        = f.input :image3, as: :image
    .row
      .col.l12
        = f.input :memo, as: :text
    .row
      .col.l2
        = f.button :submit, input_html:{class:"btn"}
